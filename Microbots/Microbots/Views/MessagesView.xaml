<UserControl x:Class="Microbots.Views.MessagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:messages="clr-namespace:Microbots.Views.Resources.Messages"
             mc:Ignorable="d"
             x:Name="This">
    <messages:MessagesResourceContainer 
        EventHandler="{Binding ElementName=This}"
        MessageMouseOverCloseColour="DarkGoldenrod" 
        MessageTextColour="DarkGoldenrod" 
        MessageBackgroundColour="LightGoldenrodYellow" 
        Title="Messages">
        <messages:MessageUserControl />
    </messages:MessagesResourceContainer>
</UserControl>