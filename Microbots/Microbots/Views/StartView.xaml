<Window x:Class="Microbots.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Microbots" MinHeight="860" MaxHeight="860" Height="860" MinWidth="1000" MaxWidth="1000" Width="1000">
    <DockPanel LastChildFill="True">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="32" 
               Background="LightGray" BorderBrush="DarkGray" BorderThickness="3,3,3,0">
            Test Your Microbots
        </Label>
        <Border Name="WorldMenu" DockPanel.Dock="Left" BorderThickness="3,3,0,3" BorderBrush="DarkGray" Width="200" />
        <Border Name="RunMenu" DockPanel.Dock="Bottom" BorderThickness="3,0,3,3" BorderBrush="DarkGray" Height="60" />
        <Border Name="World" BorderThickness="3" BorderBrush="DarkGray" />
    </DockPanel>
</Window>
